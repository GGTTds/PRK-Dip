        <Label Content="Пара 5" HorizontalAlignment="Left" Margin="403,307,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="ot_Copy3" Text="{Binding Para5}" HorizontalAlignment="Left" Height="23" Margin="534,307,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" SelectionBrush="Red" Background="{x:Null}"/>

    </Grid>
