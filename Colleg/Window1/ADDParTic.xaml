        <Label Content="Пара 3" HorizontalAlignment="Left" Margin="403,79,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="ot_Copy1" Text="{Binding Para3}" HorizontalAlignment="Left" Height="23" Margin="534,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" SelectionBrush="Red" Background="{x:Null}"/>
        <Label Content="Замечания &#xA;к паре 4" HorizontalAlignment="Left" Margin="403,233,0,0" VerticalAlignment="Top" Width="74" Height="47"/>
        <TextBox Text="{Binding Zam4}" x:Name="mat_Copy2"  HorizontalAlignment="Left" Height="47" Margin="534,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="{x:Null}" SelectionBrush="#FFFF3333"/>
