        <Button Click="Button_Click" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="145" Margin="14,336,0,0" Height="35" Background="#FF74DE5D" OpacityMask="Red"/>
        <Label Content="Замечания &#xD;&#xA;к паре 1" HorizontalAlignment="Left" Margin="43,122,0,0" VerticalAlignment="Top" Width="74" Height="47"/>
