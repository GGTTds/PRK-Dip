        <Label Content="День недели " HorizontalAlignment="Left" Margin="223,28,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Content="Замечания &#xA;к паре 2" HorizontalAlignment="Left" Margin="43,233,0,0" VerticalAlignment="Top" Width="74" Height="47"/>
        <TextBox Text="{Binding Zam2}" x:Name="mat_Copy"  HorizontalAlignment="Left" Height="47" Margin="174,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="{x:Null}" SelectionBrush="#FFFF3333"/>
        <Label Content="Пара 2" HorizontalAlignment="Left" Margin="43,190,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox x:Name="ot_Copy" Text="{Binding Para2}" HorizontalAlignment="Left" Height="23" Margin="174,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" SelectionBrush="Red" Background="{x:Null}"/>
        <Label Content="Замечания &#xA;к паре 3" HorizontalAlignment="Left" Margin="403,122,0,0" VerticalAlignment="Top" Width="74" Height="47"/>
