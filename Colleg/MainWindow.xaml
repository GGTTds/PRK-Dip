<Window x:Class="SADIC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SADIC"
        mc:Ignorable="d"
        Title="MainWindow" Height="246.608" Width="348.12" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" KeyUp="Window_KeyUp">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="47313-drepix-logo-computer-website-photography-programming.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label Content="Авторизация" Margin="110,0,0,0" VerticalAlignment="Top" Height="46" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Width="143" Foreground="#FF45C7A3"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="38,36,0,0" VerticalAlignment="Top" Height="30" Width="93" FontWeight="Bold" Foreground="#FF45C7A3"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="38,102,0,0" VerticalAlignment="Top" Height="29" Width="108" FontWeight="Bold" Foreground="#FF45C7A3"/>
        <TextBox x:Name="loggg" HorizontalAlignment="Left" Height="30" Margin="50,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" Background="White" SelectionBrush="#FFF52200" BorderBrush="#FF0C0B0B"/>
        <PasswordBox x:Name="passs" Height="29" HorizontalAlignment="Left" Margin="50,131,0,0" VerticalAlignment="Top" Width="241" Background="White" SelectionBrush="#FFF50D0D" BorderBrush="#FF0A0A0A"/>
        <Button Click="VX_Click" x:Name="VX" Content="Войти как преподаватель" HorizontalAlignment="Left" Margin="22,174,0,0" VerticalAlignment="Top" Width="158" OpacityMask="Red" Height="29" BorderBrush="#FF057ED3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFF7F7F7" Offset="0.301"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Click="RG_Click" x:Name="RG" Content="Регистрация" HorizontalAlignment="Left" Margin="99,208,0,0" Width="136" OpacityMask="Red" Height="29" VerticalAlignment="Top" BorderBrush="#FF057ED3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.343"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Click="RG_Copy_Click" x:Name="RG_Copy" Content="Войти как студент" HorizontalAlignment="Left" Margin="185,174,0,0" VerticalAlignment="Top" Width="143" OpacityMask="Red" Height="29" BorderBrush="#FF057ED3">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="0.308"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
